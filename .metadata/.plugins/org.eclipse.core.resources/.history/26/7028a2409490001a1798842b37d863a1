package modelo;

public class Aluno {
	
	///////////////////////////////////////////////////////////////////////
	private String nome;
	private int numeroMatricula;
	private String email; 
	private Endereco endereco;
	
	///////////////////////////////////////////////////////////////////////
	
	public String getAll() {
		return nome + "\n" + numeroMatricula +"\n" + email;
	}
	
	public void setAll(String nome, int numeroMatricula, String email) {
		this.nome = nome;
		this.numeroMatricula = numeroMatricula;
		this.email = email;
	}
	
	
	public void adicionarNome(String pNome) {
	nome = pNome;	
	}
	public String retornarNome() {
		return nome;
	}
	
	
	public void adicionarMatricula(int pMatricula) {
		numeroMatricula = pMatricula;	
	}   
	public int retornarMatricula() {
		return numeroMatricula;
	}
	
	
	public void adicionarEmail(String pEmail) {
		email = pEmail;	
	}   
	public String retornarEmail() {
		return email;
	}
	
}
