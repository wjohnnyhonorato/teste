package projetoPilha;

public class Pilha {
	private int topo;
	private int vetor [];
	
	
	public Pilha () {
		vetor = new int[10];
		topo = -1;
	}
	
	public boolean vazio() {
		return topo==-1;
	}
	
	public boolean cheio() {
		return topo==9;
	}
	
	public void inserir(int valor) {
		topo++;
		vetor[topo] = valor;
	}
}